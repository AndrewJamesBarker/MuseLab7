@model MuseLab7.Models.ViewModels.DetailsIdea

@{
    ViewBag.Title = "Details";
}
<a href="/idea/list">Go back to Ideas</a>
<br />
<a href="/idea/Edit/@Model.SelectedIdea.IdeaID">Update</a>
<br />
<a style="color:#ab2020;" href="/idea/DeleteConfirm/@Model.SelectedIdea.IdeaID">Delete</a>

<h2>@Model.SelectedIdea.IdeaTitle</h2>
<div>Creater: @Model.SelectedIdea.CreatorName</div>
<div>Description: @Model.SelectedIdea.IdeaDescription</div>


<div>
    <h3>@(Model.SelectedIdea.IdeaTitle)'s Collabs</h3>
    @foreach (var collab in Model.RelatedCollabs)
    {
        <p>
            <a href="/Collab/Details/@collab.CollabID">@collab.CollabTitle</a>
        </p>
    }
  
</div>
